<!-- Views/Marks/Upload.cshtml -->
@model UniversityMarks.Models.Mark

<form asp-action="Upload" method="post">
    <div class="form-group">
        <label asp-for="StudentId"></label>
        <input asp-for="StudentId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SubjectId"></label>
        <input asp-for="SubjectId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Score"></label>
        <input asp-for="Score" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>
